{
  "name": "nock-requests-tracker",
  "version": "1.0.12",
  "description": "A modern TypeScript package for tracking nock HTTP requests with minimal integration requirements",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "clean": "rm -rf dist",
    "prepare": "husky",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "nock",
    "http",
    "testing",
    "mock",
    "requests",
    "tracker",
    "typescript"
  ],
  "author": "yuri.abaev@gmail.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yuriabaev2/nock-requests-tracker.git"
  },
  "bugs": {
    "url": ""
  },
  "homepage": "",
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "nock": "^13.0.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.2",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "axios": "^1.7.2",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.0.11",
    "lint-staged": "^16.1.5",
    "nock": "^14.0.10",
    "prettier": "^3.3.2",
    "semantic-release": "^24.2.7",
    "tslib": "^2.6.3",
    "typescript": "^5.5.3",
    "vitest": "^3.2.4"
  }
}
